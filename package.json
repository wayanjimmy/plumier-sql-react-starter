{
    "private": true,
    "name": "plumier-sql-react-starter",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "kill": "kill-port 8000 5000",
        "clean": "ts-node scripts/cleanup.ts",
        "build:ui": "yarn workspace ui build",
        "postbuild:ui": "ts-node scripts/ui-postbuild.ts",
        "build:server": "yarn workspace server build",
        "postbuild:server": "ts-node scripts/server-postbuild.ts",
        "build": "yarn build:ui && yarn build:server",
        "start:ui": "yarn workspace ui start",
        "start:server": "yarn workspace server start",
        "start": "concurrently \"yarn start:ui\" \"yarn start:server\""
    },
    "devDependencies": {
        "concurrently": "^4.1.0",
        "@types/del": "^3.0.1",
        "@types/fs-extra": "^5.0.4",
        "del": "^3.0.0",
        "fs-extra": "^7.0.1",
        "kill-port": "^1.3.2"
    }
}